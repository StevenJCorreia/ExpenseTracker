<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".CategoryStatsActivity" >

    <TextView
        android:id="@+id/categoryExpenseCount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:text="Expenses: " />

    <TextView
        android:id="@+id/categoryTotalPrice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:text="Total Price: " />

    <TextView
        android:id="@+id/categoryMaximumPrice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:text="Maximum Price: " />

    <TextView
        android:id="@+id/categoryMinimumPrice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:text="Minimum Price: " />

    <TextView
        android:id="@+id/categoryAveragePrice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:text="Average Price: " />
</LinearLayout>